<script defer src="/javascript/cta-form.js"></script>

<form id="cta-form" class="form">
    <h2 class="header">
        {{#if loggedIn}}
        Add client
        {{else}}
        Secure your future
        {{/if}}
    </h2>

    <article>
        <label for="first-name">first name</label>
        <input type="text" name="first-name" id="first-name">
    </article>
    
    <article>
        <label for="last-name">last name</label>
        <input type="text" name="last-name" id="last-name">
    </article>

    <article>
        <label for="email">email</label>
        <input type="email" name="email" id="email">
    </article>

    <article>
        <label for="phone">phone</label>
        <input type="tel" name="phone" id="phone">
    </article>

    <article class="wrapper" id="contact-wrapper">
        <legend class="header">contact</legend>
        <section class="wrapper" id="radio-wrapper">
            <div class="wrapper">
                <input type="radio" name="contact"  id="contact-email" value="email">
                <label for="contact-email">email</label>
            </div>

            <div class="wrapper">
                <input type="radio" name="contact" id="contact-call" value="call">
                <label for="contact-phone">call</label>
            </div>

            <div class="wrapper">
                <input type="radio" name="contact" id="contact-text" value="text">
                <label for="contact-text">text</label>
            </div>
        </section>
    </article>

    <article>
        <label>What would you like to plan?</label>
        <textarea id="client-text" placeholder="text area"></textarea>
    </article>

    <button type="submit" id="cta-btn" class="btn">
        {{#if loggedIn}}
        Save client
        {{else}}
        Request appointment
        {{/if}}
    </button>
</form>