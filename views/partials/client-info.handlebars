<article class="client">
  <div class="client-header wrapper">
    <h3>
      <a href="/client/{{id}}">
      {{first_name}} {{last_name}}
      </a>
    </h3>
    <p>
      <a href="/client/{{id}}">
        {{comments.length}}
        {{format_plural "comment" comments.length}}
      </a>
    </p>
  </div>

  <div class="client-details">
    <p>phone</p> <p class="details"><a href="tel:{{phone}}">{{phone}}</a></p>
    <p>email</p> <p class="details"><a href="mailto:{{email}}">{{email}}</a></p>
    <p>contact</p> <p class="details">{{contact_method}}</p>
    <p class="client-text details">{{client_text}}</p>
      {{!-- {{format_date created_at}} --}}
    </p>
  </div>
</article>